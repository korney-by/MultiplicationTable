<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SelectFragment">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/multiplication"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button_by_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/button_by_2"
        style="@style/ButtonStyleByNum"

        android:backgroundTint="#FF566C"
        android:tag="2"
        android:text="@string/button_by_2"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button_by_6"
        app:layout_constraintEnd_toStartOf="@+id/button_by_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title"
        app:strokeColor="#3F3A44"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/button_by_3"
        style="@style/ButtonStyleByNum"
        android:backgroundTint="#FF7C33"
        android:backgroundTintMode="src_over"
        android:tag="3"
        android:text="@string/button_by_3"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/button_by_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_by_2"
        app:layout_constraintTop_toTopOf="@+id/button_by_2"
        app:strokeColor="#3F3A44"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/button_by_5"
        style="@style/ButtonStyleByNum"
        android:backgroundTint="#A1ED00"
        android:tag="5"
        android:text="@string/button_by_5"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_by_4"
        app:layout_constraintTop_toTopOf="@+id/button_by_2"
        app:strokeColor="#3F3A44"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/button_by_4"
        style="@style/ButtonStyleByNum"
        android:backgroundTint="#FFFF00"
        android:tag="4"
        android:text="@string/button_by_4"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/button_by_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_by_3"
        app:layout_constraintTop_toTopOf="@+id/button_by_2"
        app:strokeColor="#3F3A44"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/button_by_7"
        style="@style/ButtonStyleByNum"
        android:backgroundTint="#009DFF"
        android:tag="7"
        android:text="@string/button_by_7"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/button_by_8"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_by_6"
        app:layout_constraintTop_toTopOf="@+id/button_by_6"
        app:strokeColor="#3F3A44"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/button_by_6"
        style="@style/ButtonStyleByNum"
        android:backgroundTint="#00A872"
        android:tag="6"
        android:text="@string/button_by_6"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toTopOf="@+id/button_by_whole_table"
        app:layout_constraintEnd_toStartOf="@+id/button_by_7"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_by_2"
        app:strokeColor="#3F3A44"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/button_by_9"
        style="@style/ButtonStyleByNum"
        android:backgroundTint="#CE73FF"
        android:tag="9"
        android:text="@string/button_by_9"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_by_8"
        app:layout_constraintTop_toTopOf="@+id/button_by_6"
        app:strokeColor="#3F3A44"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/button_by_8"
        style="@style/ButtonStyleByNum"
        android:backgroundTint="#1553F8"
        android:tag="8"
        android:text="@string/button_by_8"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toStartOf="@+id/button_by_9"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_by_7"
        app:layout_constraintTop_toTopOf="@+id/button_by_6"
        app:strokeColor="#3F3A44"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/button_by_whole_table"
        style="@style/ButtonStyleByNum"
        android:layout_width="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="#BFF5F1"
        android:tag="0"
        android:text="@string/whole_table"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_check"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_by_6"
        app:strokeColor="#3F3A44"
        app:strokeWidth="5dp" />

    <Button
        android:id="@+id/button_check"
        style="@style/ButtonStyleByNum"
        android:layout_width="wrap_content"
        android:backgroundTint="#FF5BAD"
        android:text="@string/button_check"
        app:cornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/button_by_whole_table"
        app:layout_constraintTop_toTopOf="@+id/button_by_whole_table"
        app:strokeColor="#3F3A44"
        app:strokeWidth="5dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
