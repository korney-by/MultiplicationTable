<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.SelectFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginBottom="16dp"
            android:textSize="24sp"
            android:text="@string/multiplication" />

        <Button
            android:id="@+id/button_by_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="2"
            android:text="@string/button_by_2" />

        <Button
            android:id="@+id/button_by_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="3"
            android:text="@string/button_by_3" />

        <Button
            android:id="@+id/button_by_4"
            android:layout_width="match_parent"
            android:tag="4"
            android:layout_height="wrap_content"
            android:text="@string/button_by_4" />

        <Button
            android:id="@+id/button_by_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="5"
            android:text="@string/button_by_5" />

        <Button
            android:id="@+id/button_by_6"
            android:layout_width="match_parent"
            android:tag="6"
            android:layout_height="wrap_content"
            android:text="@string/button_by_6" />

        <Button
            android:id="@+id/button_by_7"
            android:layout_width="match_parent"
            android:tag="7"
            android:layout_height="wrap_content"
            android:text="@string/button_by_7" />

        <Button
            android:id="@+id/button_by_8"
            android:layout_width="match_parent"
            android:tag="8"
            android:layout_height="wrap_content"
            android:text="@string/button_by_8" />

        <Button
            android:id="@+id/button_by_9"
            android:layout_width="match_parent"
            android:tag="9"
            android:layout_height="wrap_content"
            android:text="@string/button_by_9" />

        <Button
            android:id="@+id/button_by_whole_table"
            android:layout_width="match_parent"
            android:tag="0"
            android:layout_height="wrap_content"
            android:text="@string/whole_table" />

        <Button
            android:id="@+id/button_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_check" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
