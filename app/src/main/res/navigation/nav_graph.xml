<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.korneysoft.multiplicationtable.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_selectFragment"
            app:destination="@id/selectFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectFragment"
        android:name="com.korneysoft.multiplicationtable.SelectFragment"
        android:label="{titleFragment}"
        tools:layout="@layout/fragment_select">
        <action
            android:id="@+id/action_selectFragment_to_studyFragment"
            app:destination="@id/studyFragment" />
        <action
            android:id="@+id/action_selectFragment_to_testFragment"
            app:destination="@id/testFragment" />
        <action
            android:id="@+id/action_selectFragment_self"
            app:destination="@id/selectFragment" />
        <argument
            android:name="isStudy"
            app:argType="boolean"
            android:defaultValue="true" />
        <argument
            android:name="titleFragment"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/studyFragment"
        android:name="com.korneysoft.multiplicationtable.StudyFragment"
        android:label="@string/learning"
        tools:layout="@layout/fragment_study" >
        <argument
            android:name="study_by_number"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="subTitleFragment"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/testFragment"
        android:name="com.korneysoft.multiplicationtable.TestFragment"
        android:label="@string/сheck"
        tools:layout="@layout/fragment_test" >
        <argument
            android:name="test_by_number"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="subTitleFragment"
            app:argType="string" />
    </fragment>

</navigation>
