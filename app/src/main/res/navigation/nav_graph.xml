<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.korneysoft.multiplicationtable.HomeFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_selectFragment"
            app:destination="@id/selectFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectFragment"
        android:name="com.korneysoft.multiplicationtable.SelectFragment"
        android:label="{titleFragment}"
        tools:layout="@layout/fragment_select">
        <action
            android:id="@+id/action_selectFragment_to_studyFragment"
            app:destination="@id/studyFragment" />
        <action
            android:id="@+id/action_selectFragment_to_testFragment"
            app:destination="@id/testFragment" />
        <action
            android:id="@+id/action_selectFragment_self"
            app:destination="@id/selectFragment" />
        <argument
            android:name="titleFragment"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/studyFragment"
        android:name="com.korneysoft.multiplicationtable.StudyFragment"
        android:label="fragment_study"
        tools:layout="@layout/fragment_study" />
    <fragment
        android:id="@+id/testFragment"
        android:name="com.korneysoft.multiplicationtable.TestFragment"
        android:label="fragment_test"
        tools:layout="@layout/fragment_test" />
</navigation>
